
<div class="row">
  <div class="span9 text-center header-bar">
    <h1><%= @post.header %></h1>
    <i><%= datetime_format@post.created_at %></i>
  </div>

</div>

<p id="notice"><%= notice %></p>

<p>
  <%= @post.post.html_safe %>
</p>

<% if not current_user.nil? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<% end %>